<section class="add-categ">
	<div class="container">
		<h1>Mudança de senha</h1>
		<%- include('../includes/messages') %>
		<div class="card">
			<div class="card-inner">
				<form action="/blog/admin/gen_code" method="POST">
					<%- include('../includes/csrf') %>
